.search
  = search_form_for(@q, url:search_result_path) do |f|
    %table
      %tbody
        %tr
          %th
            = f.label :residence_id_eq, '居住地'
          %td
            = f.collection_select :residence_id_eq, @residence,  :id, :prefecture, include_blank: 'こだわらない'
        %tr
          %th
            = f.label :occupancy_id_eq, '職業'
          %td
            = f.collection_select :occupancy_id_eq, @occupancy,  :id, :occupancy, include_blank: 'こだわらない'
        %tr
          %th
            = f.label :smoke_id_eq, 'タバコ'
          %td
            = f.collection_select :smoke_id_eq, @smoke,  :id, :frequency, include_blank: 'こだわらない'
        %tr
          %th
            = f.label :alcohol_id_in, 'お酒'
          %td
            -# = f.button "リセット", type: :button, class: "reset_button"
            = f.collection_check_boxes :alcohol_id_in, @alcohol, :id, :frequency
        %tr
          %th
            = f.label :school_id_in, '学歴'
          %td
            -# = f.button "リセット", type: :button, class: "reset_button"
            = f.collection_check_boxes :school_id_in, @school, :id, :school
        %tr
          %th
            = f.label :body_id_in, '体型'
          %td
            -# = f.button "リセット", type: :button, class: "reset_button"
            = f.collection_check_boxes :body_id_in, @body, :id, :body
        %tr
          %th
            = f.label :holiday_id_in, '休日'
          %td
            -# = f.button "リセット", type: :button, class: "reset_button"
            = f.collection_check_boxes :holiday_id_in, @holiday, :id, :holiday
        %tr
          %th
            = f.label :living_with_id_in, '同居人'
          %td
            -# = f.button "リセット", type: :button, class: "reset_button"
            = f.collection_check_boxes :living_with_id_in, @living_with, :id, :living_with
    = f.submit