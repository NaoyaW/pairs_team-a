.profile__contents
  = form_for @user, url: user_detail_path do |f|
    %table
      %tbody
        %tr
          %th
            = f.label :residence_id, "居住地"
          %td
            = f.collection_select :residence_id, Residence.all, :id, :prefecture, prompt: "選択してください"
        %tr
          %th
            = f.label :occupancy_id, "職業"
          %td
            = f.collection_select :occupancy_id, Occupancy.all, :id, :occupancy, prompt: "選択してください"
        %tr
          %th
            = f.label :school_id, "学歴"
          %td
            = f.collection_select :school_id, School.all, :id, :school, prompt: "選択してください"
        %tr
          %th
            = f.label :body_id, "体型"
          %td
            = f.collection_select :body_id, Body.all, :id, :body, prompt: "選択してください"
        %tr
          %th
            = f.label :holiday_id, "休日"
          %td
            = f.collection_select :holiday_id, Holiday.all, :id, :holiday, prompt: "選択してください"
        %tr
          %th
            = f.label :smoke_id, "タバコ"
          %td
            = f.collection_select :smoke_id, Smoke.all, :id, :frequency, prompt: "選択してください"
        %tr
          %th
            = f.label :alcohol_id, "お酒"
          %td
            = f.collection_select :alcohol_id, Alcohol.all, :id, :frequency, prompt: "選択してください"
    = f.submit "Send"